#! /usr/bin/env ruby

lib_path = File.expand_path(File.dirname(__FILE__)) + "/../lib/"
$LOAD_PATH << lib_path unless $LOAD_PATH.include? lib_path

require 'sudokl'

host = ARGV.shift
port = ARGV.shift
view_host = ARGV.shift
view_port = ARGV.shift

client = Sudokl::App.start({
  :host => host,
  :port => port,
  :view => {
    :host => view_host,
    :port => view_port
  }
})
